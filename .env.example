# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Steam API Configuration
STEAM_API_KEY=your_steam_api_key_here

# Steam Account Credentials
# Use EITHER Password OR Refresh Token (Refresh Token is recommended for security)
# STEAM_PASSWORD=your_steam_password_here
STEAM_REFRESH_TOKEN=your_steam_refresh_token_here

# TeamSpeak 3 Configuration
TS3_HOST=your.teamspeak.server.com
TS3_QUERY_PORT=10011
TS3_SERVER_PORT=9987
TS3_USERNAME=your_ts3_query_username
TS3_PASSWORD=your_ts3_query_password

# Database Configuration
DATABASE_URL="file:./dev.db"

# Bot Update Rate (in seconds)
UPDATE_RATE_SECONDS=30

# Logging Level (debug, info, warn, error) - default: warn
LOG_LEVEL=warn

# ============================================
# AI Provider Configuration
# ============================================

# AI Provider Priority (comma-separated, lower priority number = tried first)
# Options: grok, openai
# This is the default - can be overridden dynamically with /set_ai_priority command
AI_PROVIDER_PRIORITY=grok,openai

# AI Prompt Personality (shared across all providers)
# Options: toxic-western-ukraine, friendly, default
# Create custom prompts by adding .txt files to src/prompts/
AI_PROMPT=toxic-western-ukraine

# Default cooldown between AI responses (minutes)
AI_DEFAULT_COOLDOWN_MINUTES=7

# Message history limit for context building
AI_MESSAGE_HISTORY_LIMIT=25

# ============================================
# Grok AI Configuration (x.ai)
# ============================================

GROK_ENABLED=true
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-3-mini
GROK_BASE_URL=https://api.x.ai/v1
GROK_MAX_TOKENS=200
GROK_TEMPERATURE=0.95
GROK_PRIORITY=1

# ============================================
# OpenAI Configuration
# ============================================

OPENAI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.95
OPENAI_PRIORITY=2

# Legacy Grok-specific variables (for backward compatibility)
GROK_MESSAGE_HISTORY_LIMIT=25
GROK_DEFAULT_COOLDOWN_MINUTES=7
GROK_PROMPT=friendly

# ============================================
# Fact Extraction Configuration
# ============================================

# Enable/disable automatic fact extraction from conversations
FACT_EXTRACTION_ENABLED=true

# How many messages to analyze in each extraction batch
FACT_EXTRACTION_BATCH_SIZE=10

# Minimum messages needed before triggering analysis
FACT_EXTRACTION_MIN_MESSAGES=5

# Time interval between fact extractions (milliseconds)
# Default: 300000 (5 minutes)
FACT_EXTRACTION_INTERVAL_MS=300000

# Message count threshold to trigger extraction (regardless of time)
# Default: 10 messages
FACT_EXTRACTION_MESSAGE_THRESHOLD=10
